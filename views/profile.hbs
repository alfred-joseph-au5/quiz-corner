    <div class="container proCon w-75 bg-white shadow-lg">
        <div class="row">
            <div class="col-4">
                <div class="m-3 ">
                    <div id="editDP" onclick="setProfilePic()" class="text-center py-2"><i style="font-size:18px" class="fa mr-1 ">&#xf030;</i>Edit
                    </div>
                    
                    <img src={{imglink}} height="270px" width="250px" alt="new pic" class="centerimg img-fluid img-thumbnail">
                </div>
            </div>
            <div id="infoDiv" class="col-8 mt-3 p-0">
                <div class="col-12">
                    <h3><span class="font-weight-lighter">I'm </span> {{sessionuser}}</h3>
                    <form action="/updateprofile" method="POST" enctype="multipart/form-data">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td><b>Name</b></td>
                                    <td class="text-secondary"><small>{{name}}</small></td>                                   
                                    <td><i class="fa fa-pencil-square-o" aria-hidden="true" id="inputname"  data-toggle="modal" data-target="#inputnamemodal"></i></td>
                                </tr>
                                <tr>
                                    <td><b>Password</b> </td>
                                    <td class="text-secondary"><small>{{password}}</small> </td>
                                    <td><i class="fa fa-pencil-square-o" aria-hidden="true" data-toggle="modal" data-target="#inputpassmodal"></i></td>
                                </tr>
                                <tr>
                                    <td><b>Age</b> </td>
                                    <td class="text-secondary">{{age}}</td>
                                    <td><i class="fa fa-pencil-square-o" aria-hidden="true" data-toggle="modal" data-target="#inputagemodal"></i></td>
                                </tr>
                                <tr>
                                    <td><b>Gender</b></td>
                                    <td class="text-secondary">{{gender}}</td>
                                    <td><i class="fa fa-pencil-square-o" aria-hidden="true" data-toggle="modal" data-target="#inputgendermodal"></i></td>
                                </tr>
                                <tr>
                                    <td><b>E-mail</b> </td>
                                    <td class="text-secondary">{{email}}</td>
                                    <td><i class="fa fa-pencil-square-o" aria-hidden="true" data-toggle="modal" data-target="#inputmailmodal"></i></td>
                                </tr>
                               
                            </tbody>
                        </table>
                        <input type="file" name="profilepic" id="profilepicid" hidden="true">
                        <button type="submit" id="updatebtn" hidden=true>Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container col-9">
        <div class="row bg-danger">

            <h3 class="text-white mt-2 offset-4"><i class="fa fa-facebook ml-3 mr-5" aria-hidden="true"></i><i
                    class="fa fa-google-plus ml-3 mr-5" aria-hidden="true"></i>
                <i class="fa fa-instagram ml-3 mr-5" aria-hidden="true"></i><i class="fa fa-twitter ml-3"
                    aria-hidden="true"></i>
            </h3>
        </div>
    </div><br><br><br>